{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "lib": ["ES2019", "dom"],
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "dist",
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
